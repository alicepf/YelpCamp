<% include partials/header %>
	


	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1>Welcome to YelpVenue</h1>
				<p>View our hand-picked music venues.</p>
				<p>
					<a class="btn btn-primary btn-lg" href="/venues/new">Add New Venue</a>
				</p>
			</div>
		</header>

		<div class="row text-center" style="display:flex; flex-wrap:wrap;">
			<% venues.forEach(function(venue){ %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src="<%= venue.image %>">
						<div class="caption">
							<h4><%= venue.name %></h4>
						</div>
						<p>
							<a href="/venues/<%= venue._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
				</div>
			<% }); %>
			
		</div>
		
	</div>

<% include partials/footer %>